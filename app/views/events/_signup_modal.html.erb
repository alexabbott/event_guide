<!-- Modal -->
<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h2 class="modal-title center" id="myModalLabel">Sign Up</h2>
      </div>
      <div class="modal-body">

        
    <%= form_for(@user) do |f| %>

    <!-- error handling -->
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

<div class="event_form">
  <p class="center">Sign up to add your own events and<br>receive exclusive offers from Free::LA</p><br>
  <p><div class="field">
    <div class="col-lg-4"><%= f.label :email %></div>
    <div class="col-lg-8 form_field"><%= f.text_field :email %></div>
  </div></p>
  <p><div class="field">
    <div class="col-lg-4"><%= f.label :password %></div>
    <div class="col-lg-8 form_field"><%= f.password_field :password %></div>
  </div></p>
  <p><div class="field">
    <div class="col-lg-4"><%= f.label :password_confirmation %></div>
    <div class="col-lg-8 form_field"><%= f.password_field :password_confirmation %></div>
  </div></p>
  <div class="actions form_submit">
    <%= f.submit %>
  </div>
</div>
<% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>