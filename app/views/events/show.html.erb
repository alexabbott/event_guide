<div class="main_content">

	<div class="col-lg-3 col-xs-12">
		<a href="<%= @event.url %>" target="_blank"><img src="<%= @event.imageurl %>" class="show_event_image"></a>
	</div>

	<div class="col-lg-9 col-xs-12">
		<h1><%= @event.title %></h1>
		<div class="visible-xs-block social_small">

			<span class='st_facebook_large' displayText='Facebook'></span>
			<span class='st_twitter_large' displayText='Tweet'></span>
			<span class='st_email_large' displayText='Email'></span>
			<span class='st_google_bmarks_large' displayText='Bookmarks'></span>

		</div>
		<strong><span class="at_symbol">@</span> <%= @event.venue %></strong>
		<p><%= @event.date.strftime("%A, %b %d") %> at <%= @event.time.strftime("%I:%M %p") %></p>
		<p><%= @event.description %></p>
		<div class="visible-xl-block visible-lg-block visible-md-block visible-sm-block">

			<span class='st_facebook_large' displayText='Facebook'></span>
			<span class='st_twitter_large' displayText='Tweet'></span>
			<span class='st_email_large' displayText='Email'></span>
			<span class='st_google_bmarks_large' displayText='Bookmarks'></span>
		<br><br>
		</div>
		<p><%= link_to "Back", events_path %></p>
	</div>



	<p><iframe src="<%= @event.url %>" class="iframe animated fadeIn" frameBorder="0"></iframe></p>

	<div id="map-canvas"></div>
</div>

	<%= render :partial => 'footer.html.erb' %>

