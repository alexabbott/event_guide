<div class="main_content">

	<a href="/events/new" border="0"><div class="add_button">Add a New Event</div></a>

	<h1>Upcoming Free Events</h1>

	<ul>
	<% @events.each do |e| %>
		<li>
			<p><strong><%= e.title %></strong> @ <%= e.venue %></p>
			<p><%= e.date.strftime("%A, %b %d") %> at <%= e.time.strftime("%I:%M %p") %></p>
			<p><a href="/events/<%= e.id %>"><img src="<%= e.imageurl %>" class="index_event_image"></a></p>
			<p><%= link_to "More info", event_path(e) %></p>
		</li>
	<% end %>
	</ul>
</div>

