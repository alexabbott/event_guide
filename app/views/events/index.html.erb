<%= render :partial => 'maps_index.html.erb' %>
<div class="main_content">

	
	<!-- featured event slider rendered here -->
	<%= render :partial => 'carousel.html.erb' %>

	 <a name="event_anchor"><br></a>

	<!-- filter navigation for events rendered here -->
	<%= render :partial => 'filter_nav.html.erb' %>
	<div class="container-fluid">
	<% @events.each do |e| %>
		<div class="col-md-3 col-sm-12 col-xs-12 events_container center-block animated fadeInUp" style="margin: 0 auto;">

			<a href="/events/<%= e.id %>" class="event_link" style="text-decoration: none; color:black;">

			<div class="each_event">

				<h3><%= e.title %></h3><br>

				<span class="at_symbol">@</span> <%= e.venue %></p>

				<p><%= e.date.strftime("%A, %b %d") %> <span class="at_symbol">|</span> <%= e.time.strftime("%I:%M %p") %>
			</div>
			<% if e.imageurl.present? %>
				<%= image_tag e.imageurl, :class => 'index_event_image', :size => "400x200" %>
			<% else %>
  				<%= image_tag e.image.url(:original), :class => 'index_event_image' %>
  			<% end %>
			</a>
		</div>
	<% end %>
	</div>
	<%= render :partial => 'map_modal.html.erb' %>

	<%= render :partial => 'event_modal.html.erb' %>

	<%= render :partial => 'signup_modal.html.erb' %>

	<%= render :partial => 'login_modal.html.erb' %>

</div>

	<!-- this renders the footer, duh -->
	<%= render :partial => 'footer.html.erb' %>
